#[("Alice", "New York", "London"), ("Bob", "Tokyo", "San Francisco")], 

p= [("Alice", "New York", "London"), ("Bob", "Tokyo", "San Francisco"),("Mike", "Atlanta", "Texas")]

def travel_iteniary(travelers):
    for traveler in travelers:
        print(f'{traveler[0]} is traveling from {traveler[1]} and going to {traveler[2]}')

travel_iteniary(p)

